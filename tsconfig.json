{
  "compilerOptions": {
    "jsx": "react-jsx", // ðŸ‘ˆ Important for React 17+
    "target": "es5",
    "module": "esnext",
    "moduleResolution": "node",
    "lib": ["dom", "esnext"],
    "declaration": true,
    "declarationDir": "./dist",
    "outDir": "./dist",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "strict": true
  },
  "include": [
    "src/",
    "src/types/**/*.d.ts",
    "src/stepper/assets/",
    "src/stepper/custom-stepper.scss",
    "src/stepper/index.tsx",
    "src/types/"
  ],
  "exclude": ["node_modules", "dist"]
}
